@page "/Clients"
@using System.Dynamic
@using CRM_SAAS.Models

@code {
    List<GridCells> columns = new()
    {
        new GridCells { Collumn = "Nome" },
        new GridCells { Collumn = "Email" },
        new GridCells { Collumn = "País" },
    };

    List<ExpandoObject> rows = new();
    public bool IsLoading { get; set; } = true;

    protected override void OnInitialized()
    {
        dynamic user1 = new ExpandoObject();
        user1.Nome = "João da Silva";
        user1.Email = "joao@email.com";
        user1.País = "Brasil";

        dynamic user2 = new ExpandoObject();
        user2.Nome = "Maria Souza";
        user2.Email = "maria@email.com";
        user2.País = "Portugal";

        rows.Add(user1);
        rows.Add(user2);

        IsLoading = false;
    }
}
<CrudDefaultLayout Title="Usuários"
           GridCells="columns"
           Data="rows" />

